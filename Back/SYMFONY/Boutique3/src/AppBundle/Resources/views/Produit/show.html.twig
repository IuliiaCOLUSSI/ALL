

{% extends 'layout.html.twig' %}

{% block title %}Boutique - Produit {{ id }}

{% endblock %}


{% block content %}

Je suis dans la page n {{ id }}

<h1 class="display-4 text-center mt-4">DETAIL DU PRODUIT <strong class="text-info">{{ produit.titre|upper }}</strong></h1>
	<div class="col-lg-6 col-md-12 mx-auto form1">
	<div class="card h-100">
	   
		<a href=""><img class="card-img-top" src="{{ asset('photo/' ~ produit.photo ) }}" alt=""></a>
	   
		<div class="card-body text-center">
		<h4 class="card-title text-center">
			<a href="" class="alert-link text-info">{{produit.titre }}</a>
		</h4><hr>
		<h5 class="text-center">{{produit.prix|number_format(2, '.', ' ')  }} €</h5><hr>
		<p class="card-text text-center">{{produit.description }} </p><hr>
		<p class="card-text text-center">{{produit.taille }}</p><hr>
		<p class="card-text text-center">
        {% if produit.public == 'm' %}
        Homme
        {% elseif produit.public == 'f' %}
        Woman
        {% else %}
        Mixte
        {% endif %}
		<p class="card-text text-center">{{produit.couleur }}</p><hr>
		<a href="{{ path('categorie', {'cat' : produit.categorie}) }}"<i class="fas fa-angle-double-left"></i>&nbsp;retour vers la catégorie PULL</a>
		</div>
        <div class="card-footer text-center">
        {% if produit.stock > 0 %}
        <div class="form-group">
        <select class="form-control">
        
        {% for i in 1 .. 5 if i <= produit.stock %}
        <option>{{ i }}</option>
        {% endfor %}

        </select>
        </div>
			<button type="button" class="col-md-12 btn btn-dark">Ajouter au panier</button>

            {% else %}
            <i style="color:red">Produit en ripture de stock</i>
            {% endif %}
		</div>
		
	</div>
	</div>

{% endblock %}


